@model Door2DoorFrontEnd.Models.Auth
@{
    ViewData["Title"] = "Login";
}
<style>
    .clear {
        height:200px;
    }

    .loginform {
        background-color: #01161E;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        top: 30%;
    }
</style>
<div class="clear">
</div>
@using (Html.BeginForm("Login", "Admin", FormMethod.Post))
{
    <div class="loginform">
        @Html.TextBoxFor(Model => Model.Username, new {type="username"})
        @Html.TextBoxFor(Model => Model.Password, new {type="password"})
        <button type="submit">Login</button>
    </div>
}
