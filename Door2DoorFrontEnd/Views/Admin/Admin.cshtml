@model Door2DoorFrontEnd.Models.AdminModel
@{
    ViewData["Title"] = "Admin";
}
<style>
    .adminmenu{
        text-align:center;
    }
    .adminmenu a{
        top:50%;
        display:flex;
        justify-content:space-evenly;
        margin-bottom:20px;
        background-color:#01161E;
        color:white !important;
        font-weight:bold;
        height:40px;
        cursor:pointer;
    }
    .formwrapper{
        display:none;
        flex-direction:column;
    }

    #button {
        min-height: 35px;
        min-width: 60px;
        background-color: #598392;
        color: white;
        font-weight: bold;
        border-radius: 10px;
        border: black;
    }
    .actionform{
        display:none;
        flex-direction:column;
    }
    #hiden{
        display:none;
    }
</style>
<div class="adminmenu">

    <a onclick="toggleform('addadmin')">Tilføj admin</a>
    <div id="addadmin" class="formwrapper">
        @using (Html.BeginForm("AddAdmin","Admin",FormMethod.Post,new { @id = "actionform" }))
        {
            @Html.AntiForgeryToken();
            @Html.TextBoxFor(Model => Model.newadmin)
            <input id="button" value="Tilføj" type="submit" />
        }
        @*<form class="actionform">
            <input  type="text"/>
            <input id="button" value="Tilføj" type="submit"/>
        </form>*@
    </div>

    <a onclick="toggleform('removeadmin')">Fjern admin</a>
    <div id="removeadmin" class="formwrapper">
        <form class="actionform">
            <input type="text" />
            <input id="button" value="Fjern" type="submit" />
        </form>
    </div>

    <a onclick ="toggleform('addroute')">Tilføj rute</a>
    <div id="addroute" class="formwrapper">
        @using (Html.BeginForm("AddRoute", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
                @Html.TextBoxFor(Model => Model.newroute.StartLocation, new {placeholder = "Start location"})
                @Html.TextBoxFor(Model => Model.newroute.EndLocation, new {placeholder = "End location"})
                @Html.TextBoxFor(Model => Model.newroute.Description, new {placeholder = "Description"})
                <input id="button" value="Tilføj" type="submit" />
        }
    </div>
 @*   <form class="actionform">
        <input type="text" />
        <input id="button" value="Tilføj" type="submit" />
        <input id="file" type="file">
    </form>*@
    <a>Fjern rute</a>
</div>

<script>

    function toggleform(id) {
        var item = document.getElementById(id);
        if (item.style.display == "none") {
            item.style.display = "flex";
            console.log("flex");
        } else {
            item.style.display = "none";
        }
    }

</script>